@model IEnumerable<Models.NewsItem>

@{
    ViewData["Title"] = "Home Page";

}


@section Content{

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h4>Nieuwsbericht toevoegen</h4>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td>
                            Onderwerp
                        </td>
                        <td>
                            Acties
                        </td>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Subject
                                </td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm" title="Nieuwsbericht bekijken"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                    <a asp-controller="CMS" asp-action="EditNewsItem" asp-route-newsItemId="@item.Id" class="btn btn-primary btn-sm" title="Wijzigen"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                    <a href="#" class="confirmClick btn btn-danger btn-sm" title="Uitzetten">
                                        <i class="fa fa-ban" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
