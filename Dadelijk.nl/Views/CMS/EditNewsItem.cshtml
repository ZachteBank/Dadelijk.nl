@model Models.NewsItem
@{
    ViewData["Title"] = "Home Page";
}

@section Content{

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h4>Nieuwsbericht toevoegen</h4>
                <div class="clearfix"></div>
            </div>
            <div class="x_content form-horizontal form-label-left">
                <form action="" data-parsley-validate method="post">
                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="subject">
                            Onderwerp <span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input value="@Model.Subject" type="text" id="subject" name="subject" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="text">
                            Text <span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <!--<textarea id="text" name="text" rows="6" cols="30" class="form-control col-md-7 col-xs-12"></textarea>-->
                            @Html.Partial("../Partials/TextEditor")
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="active">
                            Actief <span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input name="active" id="active" type="checkbox" value="true" class="js-switch" checked />
                        </div>
                    </div>
                    

                    <div class="ln_solid"></div>
                    

                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-primary">Toevoegen</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
