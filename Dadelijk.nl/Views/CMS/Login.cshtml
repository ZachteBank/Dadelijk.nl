@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login Page";
    ViewData["ContentTitle"] = "Login";
}
@section Content
{
    <div class="animate form login_form">
        <section class="login_content">
            <form method="post">
                <h1>Login</h1>
                <div>
                    <input name="email" type="text" class="form-control" placeholder="Email" required=""/>
                </div>
                <div>
                    <input name="password" type="password" class="form-control" placeholder="Wachtwoord" required=""/>
                </div>
                <div>
                    <input type="submit" class="btn btn-default submit" name="login" value="Inloggen" />
                    <a class="reset_pass" href="#">Wachtwoord vergeten?</a>
                </div>

                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">Nieuw hier?
                        <a href="#signup" class="to_register"> Account registreren </a>
                    </p>

                    <div class="clearfix"></div>
                    <br/>

                    <div>
                        <h1><i class="fa fa-paw"></i> Gentelella Alela!
                        </h1>
                        <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                    </div>
                </div>
            </form>
        </section>
    </div>

    <div id="register" class="animate form registration_form">
        <section class="login_content">
            <form method="post">
                <h1>Account registreren</h1>
                <div>
                    <input name="username" type="text" class="form-control" placeholder="Gebruikersnaam" required=""/>
                </div>
                <div>
                    <input name="email" type="email" class="form-control" placeholder="Email" required=""/>
                </div>
                <div>
                    <input name="password" type="password" class="form-control" placeholder="Wachtwoord" required=""/>
                </div>
                <div>
                    <input type="submit" class="btn btn-default submit" name="register" value="Registreren" />
                </div>

                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">Heeft u al een account?
                        <a href="#signin" class="to_register"> Log in </a>
                    </p>

                    <div class="clearfix"></div>
                    <br/>

                    <div>
                        <h1><i class="fa fa-paw"></i> Gentelella Alela!
                        </h1>
                        <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                    </div>
                </div>
            </form>
        </section>
    </div>
}